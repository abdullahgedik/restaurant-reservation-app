@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restoran Rezervasyon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(135deg, #FF6B6B, #4ECDC4);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .splash-container {
            text-align: center;
            color: white;
            animation: fadeIn 1s ease-in;
        }

        .logo {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .app-name {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .loading {
            margin-top: 2rem;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .spinner {
            width: 40px;
            height: 40px;
            margin: 20px auto;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #3498db;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <div class="logo">
            <i class="fas fa-utensils"></i>
        </div>
        <h1 class="app-name">Restoran Rezervasyon</h1>
        <p class="tagline">Lezzet ve konfor bir arada</p>
        <div class="spinner"></div>
    </div>

    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
    <script>
        // 3 saniye sonra onboarding sayfasına yönlendir
        setTimeout(function() {
            window.location.href = '@Url.Action("Onboarding", "Intro")';
        }, 3000);
    </script>
</body>
</html>